<Window x:Class="VDash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VDash"
        Title="Vehicle Dashboard" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close"
                                 Executed="ApplicationClose" />
    </Window.CommandBindings>
    <Grid>
        <local:MenuControl x:Name="menu" Grid.Row="0" Grid.ColumnSpan="10" />

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Menu Row = Row 0 -->
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
