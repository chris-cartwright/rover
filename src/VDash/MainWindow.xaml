<Window x:Class="VDash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VDash"
        Title="Vehicle Dashboard" Height="649" Width="847" WindowState="Maximized">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close"
                                 Executed="ApplicationClose" />
    </Window.CommandBindings>
    <Grid>
        <local:MenuControl x:Name="menu" Grid.Row="0" Grid.ColumnSpan="10" />
        <local:VehicleStateControl x:Name="VehState" Grid.Row="2" Grid.Column="3" />
        <local:VehicleVideo x:Name="VehVideo" Grid.Row="3" Grid.Column="3" />
        <local:LogControl Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="3" x:Name="logControl1" />
        <local:VehicleAvailability Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" Margin="0,4,0,0" x:Name="vehicleAvailability1" VerticalAlignment="Top" />
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Menu Row = Row 0 -->
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
