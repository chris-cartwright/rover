<UserControl x:Class="VDash.Controls.KeyStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="105" d:DesignWidth="421">
    <Grid Height="77">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="299*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="Key Pressed:" HorizontalAlignment="Left" Margin="16,25,0,0" Name="label1" VerticalAlignment="Top" Width="80" />      
        <TextBox Focusable="False" HorizontalAlignment="Left" Margin="93,24,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" Text="{Binding Key}" />
        <Label Content="Vehicle Key State" Height="28" HorizontalAlignment="Left" Margin="93,0,0,0" Name="label3" VerticalAlignment="Top" Width="121" />
        <Label Content="Stopped" HorizontalAlignment="Left" Margin="20,44,0,0" Name="label2" VerticalAlignment="Top" Width="140" Grid.ColumnSpan="2" />
        <Label Content="Straight" HorizontalAlignment="Left" Margin="140,44,19,0" Name="label4" VerticalAlignment="Top" Width="120" />
        <CheckBox Content="Record" Height="16" HorizontalAlignment="Left" Margin="314,5,0,0" Name="cbRecord" VerticalAlignment="Top" Checked="cbRecord_Checked" />
        <Button Content="Save Record" Height="23" HorizontalAlignment="Left" Margin="300,40,0,0" Name="btnSaveRecord" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="btnSaveRecord_Click" />
    </Grid>
</UserControl>
