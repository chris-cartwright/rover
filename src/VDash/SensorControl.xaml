<UserControl x:Class="VDash.SensorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="Battery Level:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" />
        <Label Content="{Binding Percent}" Height="28" HorizontalAlignment="Left" Margin="98,12,0,0" VerticalAlignment="Top" Width="35" HorizontalContentAlignment="Right" />
        <Label Content="{Binding Current}" Height="28" HorizontalAlignment="Left" Margin="157,12,0,0" VerticalAlignment="Top" Width="35" HorizontalContentAlignment="Right" />
        <Label Content="%" Height="28" HorizontalAlignment="Left" Margin="131,12,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="v" Height="28" HorizontalAlignment="Left" Margin="190,12,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</UserControl>
